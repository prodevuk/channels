{
    "name": "laravel-notification-channels/azure-communication-services",
    "description": "Laravel Notification Channel for Azure Communication Service",
    "homepage": "https://github.com/laravel-notification-channels/azure-communication-services",
    "license": "MIT",
    "authors": [
        {
            "name": "Prodevel",
            "email": "promise@prodevel.co.uk",
            "homepage": "https://prodevel.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "illuminate/notifications": "~10.0 || ~11.0 || ~12.0",
        "illuminate/support": "~10.0 || ~11.0 || ~12.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "NotificationChannels\\ProdevelUK\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NotificationChannels\\ProdevelUK\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "config": {
        "sort-packages": true
    }
}
